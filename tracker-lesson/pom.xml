<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>_</artifactId>
        <groupId>lesson</groupId>
        <version>0.1.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>04</artifactId>
    <packaging>bundle</packaging>
    <dependencies>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.21</version>
        </dependency>
        <!--We import listener (lesson/03) so we can use the EnumerationDictionary class
        to convert status and event codes into human-readable messages. Later, we will make this
        a proper OSGi service.-->
        <dependency>
            <groupId>lesson</groupId>
            <artifactId>03</artifactId>
            <version>0.1.0</version>
        </dependency>
    </dependencies>
    <properties>
        <bundleName>tracker-lesson</bundleName>
        <packageName>tracker</packageName>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>3.2.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-Activator>${packageName}.Activator</Bundle-Activator>
                        <Bundle-SymbolicName>${bundleName}</Bundle-SymbolicName>
                        <Bundle-Name>${bundleName}</Bundle-Name>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>